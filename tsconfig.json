{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "5.0",
    "isolatedModules": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "target": "ESNext",
    "skipLibCheck": true,
  },
  "include": ["./src/**/*"]
}
